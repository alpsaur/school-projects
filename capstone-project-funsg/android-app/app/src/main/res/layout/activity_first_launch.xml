<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstLaunch"
    android:background="@drawable/launch_page_photo">

    <TextView
        android:id="@+id/preview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:text=" Preview "
        android:textColor="@color/white"
        android:background="#80006B80"
        android:textSize="26sp"
        />
    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:layout_marginHorizontal="49dp"

        android:backgroundTint="#E69BC9DD"
        android:text="Sign up"
        android:textColor="@color/darkblue"
        android:textSize="26sp"
        android:textAllCaps="false"
        />
    <TextView
        android:id="@+id/text_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="5dp"

        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="#999BC9DD"
        android:text=" Already have an account? "/>
    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_already"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="5dp"
        android:text="Log in"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:layout_marginStart="53dp"
        android:background="#80EBF9FF"
        android:textSize="40sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>