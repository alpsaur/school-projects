<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupPage"
    android:background="@color/white">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="40sp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/darkblue">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">
                <ImageView
                    android:id="@+id/group_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/join_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginVertical="10dp"

                android:backgroundTint="@color/paleblue"
                android:text="Join Group"
                android:textColor="#4D4D4D"
                android:textSize="26sp"
                android:textAllCaps="false"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:text="About us"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="36sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_height="1dp"
                android:background="@color/lightblack" />
            <TextView
                android:id="@+id/group_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:text=""
                android:textColor="@color/lightblack"
                android:textSize="22dp"
                />
            <TextView
                android:id="@+id/show_photo_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgrey"
                android:layout_marginHorizontal="22dp"
                android:textSize="20sp"
                android:clickable="true"
                android:focusable="true"
                android:text="Discover Amazing Photos >"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                android:text="Events"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="36sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_height="1dp"
                android:background="@color/lightblack" />
            <TextView
                android:id="@+id/no_event_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:text="None"
                android:textSize="22sp"
                android:textColor="@color/grey"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E1ECF0"
                android:paddingLeft="10dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/event_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="20dp"
                android:text="Our Members"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="36sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_height="1dp"
                android:background="@color/lightblack" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="22dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/members_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/virtual_member"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:visibility="gone">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:src="@drawable/person_profile_2"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:src="@drawable/person_profile_1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="22dp"
                android:text="Comments"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="36sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_height="1dp"
                android:background="@color/lightblack" />

            <TextView
                android:id="@+id/no_comment_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:text="None"
                android:textSize="22sp"
                android:textColor="@color/grey"
                android:visibility="gone"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp">
            </androidx.recyclerview.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#609BC9DD"
        >
        <EditText
            android:id="@+id/group_comment_enter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:hint="Comments..."
            android:textColorHint="#94696969"
            android:textSize="25sp"
            android:textColor="@color/lightblack"
            android:paddingHorizontal="20dp"
            android:background="@drawable/comment_input"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/send_button_container"
        android:layout_width="43dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="7dp"
        app:layout_constraintHorizontal_bias="0.9"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/comment_send_ripple"
        >

        <View
            android:id="@+id/search_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/comment_send"/>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>