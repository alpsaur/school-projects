<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".NavPersonFragment"
    android:background="#E2EBEF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">
        <TextView
            android:id="@+id/category_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Account Info"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="1dp"
            android:background="@color/black" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingVertical="20dp"
                android:paddingHorizontal="15dp">
                <TextView
                    android:id="@+id/username"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text=""
                    android:textColor="@color/darkgrey"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    />
                <TextView
                    android:id="@+id/email"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/username"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text=""
                    android:textColor="@color/lightblack"
                    android:textStyle="italic"
                    android:textSize="24sp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="8dp"
                    android:background="#FFFFFF"
                    app:cardElevation="4dp">
                    <ImageView
                        android:id="@+id/user_profile_image"
                        android:background="#FFFFFF"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/group_joined_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/group_joined_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="50sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Groups"
                        android:textSize="25sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightblack" />
                <LinearLayout
                    android:id="@+id/event_joined_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/event_joined_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="50sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Events"
                        android:textSize="25sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:orientation="vertical"
                android:background="@color/white">
                <Button
                    android:id="@+id/create_new_group"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/create_group_event_ripple"
                    android:textSize="25sp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"

                    android:text="Create a new group"/>
                <Button
                    android:id="@+id/create_new_event"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/create_group_event_ripple"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:textSize="25sp"
                    android:textAllCaps="false"
                    android:text="Organize a new event"/>
                <Button
                    android:id="@+id/manage_events"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/create_group_event_ripple"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:textSize="25sp"
                    android:textAllCaps="false"
                    android:text="Manage events"/>
                <Button
                    android:id="@+id/log_out_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="#DE1414"
                    android:textSize="25sp"
                    android:textAllCaps="false"
                    android:text="Log out" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</LinearLayout>